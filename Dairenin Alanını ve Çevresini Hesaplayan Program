import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);

        int r,a;
        double pi=3.14,alan;

        System.out.print("Yarıçap gir: ");
        r=input.nextInt();
        System.out.print("Merkez açı gir: ");
        a=input.nextInt();

        alan=(pi*(r*r)*a)/360;

        System.out.println("Daire dilim alan: "+alan);
    }
}
