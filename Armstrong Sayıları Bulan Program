import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int sayi,basamakAdet=0,basamak,gecici,basamakTop=0,tabanUs;
        System.out.print("Sayı gir: ");
        sayi=input.nextInt();

        gecici=sayi;
        while (sayi!=0) {
            sayi = sayi / 10;
            basamakAdet++;
        }
        sayi=gecici;
        while (sayi!=0){
            basamak=sayi%10;
            tabanUs=1;
            for (int i=1;i<=basamakAdet;i++){
                tabanUs=tabanUs*basamak;
            }
            basamakTop=basamakTop+tabanUs;
            sayi=sayi/10;
        }
        if (gecici==basamakTop)
            System.out.print("Amstrong sayıdır.");
        else
            System.out.print("Amstrong sayı değildir.");

        /*
        //Ödev
        //Bir sayının basamak sayılarının toplamını hesaplayan program yazınız.
        //Örnek : 1643 = 1 + 6 + 4 + 3 = 14
        
        int sayi,basamak,toplam=0;
        System.out.print("Taban gir: ");
        sayi=input.nextInt();

        while (sayi!=0){
            basamak=sayi%10;
            toplam=toplam+basamak;
            sayi=sayi/10;
        }
        System.out.print(toplam);*/
    }
}
